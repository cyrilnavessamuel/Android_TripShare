<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="master1.unice.com.main.ViewSharedService"
    tools:showIn="@layout/activity_view_shared_service">

    <ScrollView
        android:id="@+id/viewsharedservice_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/viewsharedservicevalue_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/SharedService_Name"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginTop="36dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Name of Service"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="63dp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/SharedService_Type"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Service Type"
                tools:layout_editor_absoluteX="63dp"
                tools:layout_editor_absoluteY="111dp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/SharedService_Desription"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Description"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.432"
                tools:layout_editor_absoluteX="63dp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/SharedService_Source"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Source"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.432"
                tools:layout_editor_absoluteX="63dp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/SharedService_Destination"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Destination"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.432"
                tools:layout_editor_absoluteX="63dp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/SharedService_Location"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Location"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.432"
                tools:layout_editor_absoluteX="63dp" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/SharedService_Condition"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Condition"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.432"
                tools:layout_editor_absoluteX="63dp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/SharedService_Start_Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="date"
                android:hint="Start Date"
                tools:layout_editor_absoluteX="63dp"
                tools:layout_editor_absoluteY="266dp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/SharedService_End_Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="date"
                android:hint="End Date"
                tools:layout_editor_absoluteX="63dp"
                tools:layout_editor_absoluteY="336dp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/SharedService_Cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint=" Cost"
                tools:layout_editor_absoluteX="63dp"
                tools:layout_editor_absoluteY="336dp" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/DeleteSharedService_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Delete Service"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="121dp" />
    </LinearLayout>
</ScrollView>


    </android.support.constraint.ConstraintLayout>
